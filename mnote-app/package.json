{
  "name": "mnote-app",
  "version": "0.1.0",
  "scripts": {
    "build": "shx rm -rf dist && shx cp -r public dist && node build.js",
    "build-web": "shx rm -rf dist && shx cp -r public dist && node build-web.js",
    "serve": "npm run build-web && serve dist --no-clipboard",
    "tauri": "tauri",
    "start": "npm run build && npm run tauri dev && run",
    "release": "npm run build && npm run tauri"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.0.0-beta.5",
    "esbuild": "^0.12.7",
    "esbuild-plugin-alias": "^0.1.2",
    "esbuild-sass-plugin": "^1.4.4",
    "serve": "^12.0.0",
    "shx": "^0.3.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.0.0-beta.4",
    "mnote-core": "file:../mnote-core",
    "mnote-extensions": "file:../mnote-extensions",
    "mnote-styles": "file:../mnote-styles",
    "mnote-util": "file:../mnote-util"
  }
}
