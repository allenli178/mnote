{
  "name": "mnote-app",
  "version": "0.1.0",
  "scripts": {
    "tauri": "tauri",
    "serve": "serve",
    "bundle-debug": "shx rm -rf dist && shx cp -r public dist && node bundle-scripts/bundle-dev.js",
    "bundle-web": "shx rm -rf dist && shx cp -r public dist && node bundle-scripts/bundle-web.js",
    "bundle-release": "shx rm -rf dist && shx cp -r public dist && node bundle-scripts/bundle-release.js",
    "build-debug": "npm run bundle-debug && tauri build --debug",
    "build-release": "npm run bundle-release && tauri build",
    "dev": "npm run bundle-debug && tauri dev",
    "dev-web": "npm run bundle-web && serve dist --no-clipboard",
    "action-publish": "npm run bundle-release && tauri"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.0.0-beta.10",
    "esbuild": "^0.12.22",
    "esbuild-plugin-alias": "^0.1.2",
    "esbuild-sass-plugin": "^1.4.4",
    "serve": "^13.0.2",
    "shx": "^0.3.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.0.0-beta.8",
    "mnote-components": "file:../mnote-components",
    "mnote-core": "file:../mnote-core",
    "mnote-deps": "file:../mnote-deps",
    "mnote-extensions": "file:../mnote-extensions",
    "mnote-styles": "file:../mnote-styles",
    "mnote-util": "file:../mnote-util"
  }
}
